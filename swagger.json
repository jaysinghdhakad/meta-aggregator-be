{
    "openapi": "3.0.0",
    "info": {
        "title": "Swap API",
        "version": "1.0.0",
        "description": "API for getting best quotes and swap data"
    },
    "servers": [
        {
            "url": "http://localhost:3000"
        }
    ],
    "paths": {
        "/best-quote": {
            "post": {
                "summary": "This is for the best quote with swap data. This endpoint queries all protocols and returns the best quote with swap data. Won't return gas estimate for portalfi. Would not return quote from protalfi if sender is not receiver.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "slippage",
                                    "amount",
                                    "tokenIn",
                                    "tokenOut",
                                    "sender",
                                    "receiver",
                                    "chainId"
                                ],
                                "properties": {
                                    "slippage": {
                                        "type": "number"
                                    },
                                    "amount": {
                                        "type": "number"
                                    },
                                    "tokenIn": {
                                        "type": "string"
                                    },
                                    "tokenOut": {
                                        "type": "string"
                                    },
                                    "sender": {
                                        "type": "string"
                                    },
                                    "receiver": {
                                        "type": "string"
                                    },
                                    "chainId": {
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful response with best quote",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "protocol": {
                                            "type": "string"
                                        },
                                        "amountOut": {
                                            "type": "string"
                                        },
                                        "to": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "string"
                                        },
                                        "value": {
                                            "type": "string"
                                        },
                                        "minAmountOut": {
                                            "type": "string"
                                        },
                                        "gasEstimate": {
                                            "type": "number"
                                        },
                                        "approvalAddress": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "No quotes found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/best-amount-out": {
            "post": {
                "summary": "This is for the best amount out. This endpoint queries all protocols and returns the best amount out. Also give the approval address for the best quote.Would not return amount from protalfi if sender is not receiver.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "amount",
                                    "tokenIn",
                                    "tokenOut",
                                    "sender",
                                    "receiver",
                                    "chainId"
                                ],
                                "properties": {
                                    "amount": {
                                        "type": "string"
                                    },
                                    "tokenIn": {
                                        "type": "string"
                                    },
                                    "tokenOut": {
                                        "type": "string"
                                    },
                                    "sender": {
                                        "type": "string"
                                    },
                                    "receiver": {
                                        "type": "string"
                                    },
                                    "chainId": {
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful response with best amount out",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "amountOut": {
                                            "type": "string"
                                        },
                                        "protocol": {
                                            "type": "string"
                                        },
                                        "approvalAddress": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "No quotes found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/swap-data": {
            "post": {
                "summary": "This end point is for the swap data. This endpoint queries the protocol sent in by the user and returns the swap data. Also give the approval address for the best quote.Would not return amount from protalfi if sender is not receiver.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "slippage",
                                    "amount",
                                    "tokenIn",
                                    "tokenOut",
                                    "sender",
                                    "amountOut",
                                    "protocol",
                                    "receiver",
                                    "chainId"
                                ],
                                "properties": {
                                    "slippage": {
                                        "type": "number"
                                    },
                                    "amount": {
                                        "type": "string"
                                    },
                                    "tokenIn": {
                                        "type": "string"
                                    },
                                    "tokenOut": {
                                        "type": "string"
                                    },
                                    "sender": {
                                        "type": "string"
                                    },
                                    "amountOut": {
                                        "type": "string"
                                    },
                                    "protocol": {
                                        "type": "string"
                                    },
                                    "receiver": {
                                        "type": "string"
                                    },
                                    "chainId": {
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful response with swap data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "protocol": {
                                            "type": "string"
                                        },
                                        "amountOut": {
                                            "type": "string"
                                        },
                                        "to": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "string"
                                        },
                                        "value": {
                                            "type": "string"
                                        },
                                        "minAmountOut": {
                                            "type": "string"
                                        },
                                        "gasEstimate": {
                                            "type": "number"
                                        },
                                        "approvalAddress": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "No swap data found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}